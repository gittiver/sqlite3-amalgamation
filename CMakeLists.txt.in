cmake_minimum_required(VERSION 3.0.2)
project(sqlite3)

add_library(sqlite3 STATIC sqlite3.c)

add_library(sqlite3-dl SHARED sqlite3.c)
set_target_properties(sqlite3-dl
        PROPERTIES OUTPUT_NAME sqlite3)

if(SQLITE_WITH_SHELL)
  add_executable(sqlite3-bin shell.c)
  target_link_libraries(sqlite3-bin sqlite3)
  set_target_properties(sqlite3-bin
        PROPERTIES OUTPUT_NAME sqlite3)
endif(SQLITE_WITH_SHELL)
  

